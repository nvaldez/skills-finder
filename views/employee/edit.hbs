<h1>Edit Employee Profile</h1>

<form action="/employee/{{employee._id}}?_method=PUT" method="post">
    <p>
        <label for="name">Name:</label>
        <input type="text" name="name" value="{{employee.name}}">
    </p>

    <p>
        <label for="title">Title:</label>
        <input type="text" name="title" value="{{employee.title}}">
    </p>

    <p>Contact
        <ul>
            <li>
                <label for="email">Email:</label>
                <input type="text" name="contact[email]">
            </li>
            <li>
                <label for="phone">Phone:</label>
                <input type="text" name="contact[phone]">
            </li>
            <li>
                <label for="github">GitHub:</label>
                <input type="text" name="contact[github]">
            </li>
        </ul>
    </p>
    <p>
        <label for="department">Department:</label>
        <input type="text" name="department"> </p>
    </p>
    <p>
        <label for="location">Location:</label>
        <input type="text" name="location"> </p>
    </p>
    <p>
        <label for="spcecialty">Specialty:</label>
        <input type="text" name="specialty"> </p>
    </p>
    <p>
        <label for="skills">Skills:</label>
        <input type="text" name="skills"> </p>
    </p>
    <input type="submit" value="Update">

</form>