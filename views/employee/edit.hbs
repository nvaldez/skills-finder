<h1 class="mt-5 mb-5 text-center text-info">Edit Employee Profile</h1>

<div class="card border-info mb-3" style="width: 30rem;">

    <div class="card-body text-info">

        <form action="/employee/{{employee._id}}?_method=PUT" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" id="exampleFormControlInput1" type="text" name="name"
                    value="{{employee.name}}">
            </div>

            <div class="form-group">
                <label for="title">Title</label>
                <input class="form-control" id="exampleFormControlInput1" type="text" name="title"
                    value="{{employee.title}}">
            </div>

            <p class="form-group">Contact
                <ul>
                    <li class="list-unstyled">
                        <label for="email">Email</label>
                        <input class="form-control" id="exampleFormControlInput1" type="text" name="contact[email]"
                            value="{{employee.contact.email}}">
                    </li>
                    <li class="list-unstyled">
                        <label for="phone">Phone</label>
                        <input class="form-control" id="exampleFormControlInput1" type="text" name="contact[phone]"
                            value="{{employee.contact.phone}}">
                    </li>
                    <li class="list-unstyled">
                        <label for="github">GitHub</label>
                        <input class="form-control" id="exampleFormControlInput1" type="text" name="contact[github]"
                            value="{{employee.contact.github}}">
                    </li>
                </ul>
            </p>
            <div class="form-group">
                <label for="department">Department</label>
                <input class="form-control" id="exampleFormControlInput1" type="text" name="department"
                    value="{{employee.department}}">
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" id="exampleFormControlInput1" type="text" name="location"
                    value="{{employee.location}}">
            </div>
            <div class="form-group">
                <label for="spcecialty">Specialty</label>
                <input class="form-control" id="exampleFormControlInput1" type="text" name="specialty"
                    value="{{employee.specialty}}">
            </div>
            <div class="form-group">
                <label for="skills">Skills</label>
                <input class="form-control" id="exampleFormControlInput1" type="text" name="skills"
                    value="{{employee.skills}}">
            </div>

            <div class="text-center">
                <input class="btn btn-outline-dark m-3" type="submit" value="Update">
                <a class="btn btn-outline-dark m-3" href="/employee">Employee Home Page</a>
            </div>
    </div>


    </form>
</div>