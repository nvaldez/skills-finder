<h1 class="mt-5 mb-5 text-center text-info">Create New Employee Profile</h1>

<div class="card border-info mb-3" style="width: 30rem;">

    <div class="card-body text-info">

        <form action="/employee" method="post">

            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" id="exampleFormControlInput1" type="text" name="name">
            </div>

            <div class="form-group">
                <label for="title">Title:</label>
                <input class="form-control" id="exampleFormControlInput1" type="text" name="title">
            </div>

            <p>Contact
                <ul>
                    <li class="list-unstyled">
                        <label for="email">Email:</label>
                        <input class="form-control" id="exampleFormControlInput1" type="text" name="contact[email]">
                    </li>
                    <li class="list-unstyled">
                        <label for="phone">Phone:</label>
                        <input class="form-control" id="exampleFormControlInput1" type="text" name="contact[phone]">
                    </li>
                    <li class="list-unstyled">
                        <label for="github">GitHub:</label>
                        <input class="form-control" id="exampleFormControlInput1" type="text" name="contact[github]">
                    </li>
                </ul>
            </p>
            <div class="form-group">
                <label for="department">Department:</label>
                <input class="form-control" id="exampleFormControlInput1" type="text" name="department"> </p>
            </div>
            <div class="form-group">
                <label for="location">Location:</label>
                <input class="form-control" id="exampleFormControlInput1" type="text" name="location"> </p>
            </div>
            <div class="form-group">
                <label for="spcecialty">Specialty:</label>
                <input class="form-control" id="exampleFormControlInput1" type="text" name="specialty"> </p>
            </div>
            <div class="form-group">
                <label for="skills">Skills:</label>
                <input class="form-control" id="exampleFormControlInput1" type="text" name="skills"> </p>
            </div>
            <div class="text-center">
                <input class="btn btn-outline-dark m-3" type="submit" value="Save">
                <a class="btn btn-outline-dark m-3" href="/employee">Employee Home Page</a>
            </div>



        </form>
    </div>
</div>