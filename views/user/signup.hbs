<h2 class="mt-5 mb-5 text-center text-info">Sign Up:</h2>

{{#if error}}
<p class="alert alert-danger">{{error}}</p>
{{/if}}
<div class="container login">

    <form action="/signup" method="post">
        <div class="form-group">
            <label for="username">Username:</label>
            <input style="width: 20rem;" class="form-control" id="exampleFormControlInput1" type="text" name="username">
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input style="width: 20rem;" type="password" name="password" id="password" class="form-control">
        </div>

        <input type="submit" value="Sign Up" class="btn btn-outline-dark m-3">

    </form>
</div>